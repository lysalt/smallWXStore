.a-list{
    width: 720rpx;
    margin-bottom: 0rpx;
    display: flex;
    border-top: 1px solid #eee;
    border-bottom: 0.5px solid #eee;
    padding: 30rpx 30rpx 30rpx 0;
}
.a-list .time-info{
    width: 160rpx;
    height:100rpx;
    overflow: hidden;
    text-align: center;
    //margin-right: 20rpx;
}

.a-list .text-box{
    width: 510rpx;
    box-sizing: border-box;
    padding-top: 5rpx;
}

.a-list .text-box .arow{
    display: flex;
    justify-content: space-between;
    align-items: center;
 }
.a-list .text-box .arow .name{
     width: 360rpx;
     font-size:30rpx;
     height: 50rpx;
     color:#000000;
     line-height: 1.3;
     overflow: hidden;
 }
.a-list .text-box .arow01{
    margin-bottom: 10rpx;
}
.a-list .text-box .arow .goods-price{
    font-size:26rpx;
    color:#000000;
    align-self: flex-start;
}
.a-list .text-box .arow .goods-label{
    font-size: 26rpx;
    color: #999;
}