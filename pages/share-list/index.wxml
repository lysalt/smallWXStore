<view class="container">
    <view class="status-box">
        <view bindtap="statusTap" class="status-label {{index == currentType ? 'active' : ''}}" wx:for-items="{{statusType}}" wx:key="{{index}}" data-index="{{index}}">
            {{item}}
            <view class="{{tabClass[index]}}"></view>
        </view>
    </view>
    <view class="no-order" hidden="{{goodsList ? true : false}}">
        <image src="/images/no-order.png" class="no-order-img"></image>
        <view class="text">暂无分享订单</view>
    </view>
    <view class="goods-list" hidden="{{goodsList ? false : true}}">
        <view class="a-order" wx:for-items="{{goodsList}}" wx:key="{{index}}">
            <view class="a-goods">
                <view class="img-box">
                    <image src="{{item.pic}}" class="img" />
                </view>
                <view class="text-box">
                    <view class="arow arow01">
                        <view class="goods-name">{{item.name}}</view>
                        <view class="goods-price">¥ {{item.price}}</view>
                        <view class="goods-price">{{item.SDate}}</view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>